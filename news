@app.route("/")
def home():
    import flask
    category = flask.request.args.get("category", "top")

    url = f"https://newsdata.io/api/1/news?apikey={API_KEY}&language=en&category={category}"

    try:
        res = requests.get(url)
        data = res.json()
        articles = data.get("results", [])
    except:
        articles = []

    return render_template_string(HTML_TEMPLATE, articles=articles)

if __name__ == "__main__":
    app.run(debug=True)
